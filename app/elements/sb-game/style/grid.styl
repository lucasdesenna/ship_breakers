// from http://nicolasgallagher.com/micro-clearfix-hack/
clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

.grid
  position: absolute
  display: block
  color: white
  background: black
  font-family: 'Roboto Mono'
  line-height: 2em
  white-space: nowrap
  clearfix()

  & > .row
    position: relative
    display: block
    list-style: none
    padding: 0
    margin: 0
    clearfix()

    &:not(:first-child)
      margin: -26px 0 0

    &:nth-child(odd) {
      left: 16px
    }

    & > .cell
      display: inline-block
      min-width: 2em
      min-height: 2em
      text-align: center
      vertical-align: middle
      padding: 0
      white-space: pre

      & > .layer
        position: absolute
        display: block
        min-width: 2em
        min-height: 2em
        text-align: center
        vertical-align: middle
        padding: 0
        white-space: pre